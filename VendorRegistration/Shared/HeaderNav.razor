@code {
    private bool hasNotifications = false;
    private int notificationCount = 0;
    private Company? Company { get; set; }

    protected override async Task OnInitializedAsync()
    {
        //if (_theme.ThemeRetrieved)
        //{
            //var userAuth = await ((CustomAuthenticationStateProvider)_asp).GetAuthenticationStateAsync();

            var userAuth = ClaimsPrincipal.Current;

            if (userAuth != null)
            {
                var claims = userAuth.Claims.ToList();      //

                var CompanyId = claims?.FirstOrDefault(claim => claim.Type.Equals("Company"))?.Value;

                if (CompanyId is not null)
                {
                    Company = _cs.GetCompanyByIdString(CompanyId);
                }
            }
        //}
    }

    public async Task PerformLogout()
    {
        try
        {
            ((CustomAuthenticationStateProvider)_asp).Logout();
            _nav.NavigateTo("/account/login");
        }
        catch (Exception e) { }
    }

    private void ClearAllNotifications()
    {
        notificationCount = 0;
        hasNotifications = false;
        StateHasChanged();
    }
}